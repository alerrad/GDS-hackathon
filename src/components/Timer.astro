<script>
  const days_span = document.getElementById("days");
  const hours_span = document.getElementById("hours");
  const minutes_span = document.getElementById("minutes");
  const seconds_span = document.getElementById("seconds");

  let x = setInterval(() => {
    const countDownDate = new Date("April 20, 2024 09:00:00").getTime();
    var now = new Date().getTime();
    var distance = countDownDate - now;

    days_span.style.setProperty("--value", String(Math.floor(distance / (1000 * 60 * 60 * 24))));
    hours_span.style.setProperty("--value", Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)).toString());
    minutes_span.style.setProperty("--value", Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60)).toString());
    seconds_span.style.setProperty("--value", Math.floor((distance % (1000 * 60)) / 1000).toString());

    if (distance < 0) {
      clearInterval(x);
    }
  }, 1000);
</script>

<div class="grid grid-flow-col gap-5 text-center auto-cols-max">
  <div class="flex flex-col">
    <span class="countdown font-mono text-5xl">
      <span id="days"></span>
    </span>
    Дней
  </div>
  <div class="flex flex-col">
    <span class="countdown font-mono text-5xl">
      <span style=`--value:4` id="hours"></span>
    </span>
    Часов
  </div>
  <div class="flex flex-col">
    <span class="countdown font-mono text-5xl">
      <span style=`--value:4` id="minutes"></span>
    </span>
    Минут
  </div>
  <div class="flex flex-col">
    <span class="countdown font-mono text-5xl">
      <span style=`--value:5` id="seconds"></span>
    </span>
    Секунд
  </div>
</div>
